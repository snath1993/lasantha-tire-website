const SESSION_ERROR_PATTERNS = [
    'Execution context was destroyed',
    'Session closed',
    'Target closed',
    'Protocol error',
    'clientInstance is not defined',
    'Evaluation failed'
];

// Some WhatsApp Web internal errors are noisy but often transient.
// Restarting the whole session on these can cause infinite re-init loops.
const TRANSIENT_WA_ERROR_PATTERNS = [
    'markedUnread',
    'WidFactory',
    'Attempted to use detached Frame'
];

function isWhatsAppClientReady() {
    const c = global.whatsappClient;
    const hasInfo = Boolean(c && c.info && c.info.wid);
    const hasReadyFlag = Boolean(c && c.isReady);
    // pupPage indicates Puppeteer page exists (client initialized enough to send).
    // NOTE: hasInfoWid can be true even when whatsapp-web.js never emitted 'ready'
    // and inbound events are broken. Prefer the explicit ready signals.
    return Boolean(c && c.pupPage && (isInitialized || hasReadyFlag || forcedReady));
}

