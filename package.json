{
    "name": "whatsapp-sql-api",
    "version": "1.0.0",
    "description": "A web API project that connects a WhatsApp application to a PC, allowing the PC to receive messages and reply by retrieving data from an SQL database.",
    "main": "index.js",
    "scripts": {
        "bot": "node index.js",
        "bot:bg": "powershell -NoProfile -WindowStyle Hidden -Command Start-Job { node index.js } | Out-Null",
        "bot:startup:install": "powershell -ExecutionPolicy Bypass -File ./scripts/install-bot-startup.ps1",
        "bot:startup:uninstall": "powershell -ExecutionPolicy Bypass -File ./scripts/uninstall-bot-startup.ps1",
        "desktop": "electron ./desktop/main.js --no-sandbox",
        "start": "powershell -Command \"Start-Job { node index.js }; Start-Sleep -Seconds 2; electron ./desktop/main.js --no-sandbox\"",
        "test:db": "node test-db-connection.js",
        "build": "tsc",
        "test": "jest",
        "sync:view": "node tools/sync_sales_view.js",
        "dev:all": "node scripts/start-all.js",
        "dev:all:ps": "powershell -ExecutionPolicy Bypass -File ./scripts/start-all.ps1",
        "web:lint": "npm run lint --prefix apps/lasantha-site-v2",
        "web:build": "npm run build --prefix apps/lasantha-site-v2",
        "web:dev": "npm run dev --prefix apps/lasantha-site-v2",
        "stack:dev": "powershell -Command \"Start-Job { node index.js }; Start-Sleep -Seconds 2; npm run dev --prefix apps/lasantha-site-v2\"",
        "postinstall": "node scripts/ensure-whatsapp-chromium.js"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.67.0",
        "@google/generative-ai": "^0.24.1",
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "axios": "^1.13.2",
        "body-parser": "^1.19.0",
        "canvas": "^3.2.0",
        "chart.js": "^4.5.0",
        "chartjs-node-canvas": "^5.0.0",
        "cheerio": "^1.1.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "exceljs": "^4.4.0",
        "express": "^4.21.2",
        "express-rate-limit": "^6.11.2",
        "form-data": "^4.0.4",
        "groq-sdk": "^0.37.0",
        "http-proxy-middleware": "^3.0.5",
        "mime-types": "^3.0.2",
        "moment": "^2.30.1",
        "moment-timezone": "^0.6.0",
        "mssql": "^11.0.1",
        "node-cron": "^4.2.1",
        "node-schedule": "^2.1.1",
        "nodemailer": "^7.0.11",
        "odbc": "^2.4.9",
        "ollama": "^0.6.0",
        "openai": "^5.23.2",
        "pdf-lib": "^1.17.1",
        "pdfkit": "^0.17.2",
        "pino": "^10.3.0",
        "puppeteer-core": "^24.36.1",
        "qrcode": "^1.5.4",
        "qrcode-terminal": "^0.12.0",
        "sharp": "^0.34.4",
        "socket.io": "^4.8.1",
        "sqlite3": "^5.1.7",
        "whatsapp-web.js": "^1.34.6"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.7",
        "@types/pg": "^8.15.5",
        "baseline-browser-mapping": "^2.9.5",
        "electron": "^38.2.2",
        "jest": "^27.0.6",
        "tailwindcss": "^4.1.18",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "author": "Your Name",
    "license": "MIT"
}
